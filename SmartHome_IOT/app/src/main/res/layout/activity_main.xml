<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">

        <!--        # Notification-->
        <Button
            android:id="@+id/notification"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:drawableRight="@drawable/noti"
            android:layout_marginRight="5dp"
            android:paddingTop="10dp" />
    </LinearLayout>

    <!--    Welcome-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_weight="1"
            android:gravity="left"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="3"
            android:text="Welcome\nHome"
            android:textColor="#FFFFFF"
            android:textSize="40dp"
            android:textStyle="bold"></TextView>
    </LinearLayout>

    <!--Temperature & Humidity-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="horizontal">

        <!--        Temperature-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/rounded"
            android:orientation="vertical"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:id ="@+id/txtTemperature"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="36Â°C"
                    android:layout_marginLeft="5dp"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:gravity="start" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/temperature" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/progressBarTemp"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:progress="50"
                android:progressDrawable="@drawable/custom_progress_bar" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:orientation="horizontal" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Temperature"
                android:textSize="18sp"
                android:textColor="#FFC700"
                android:gravity="center"
                android:paddingTop="8dp" />
        </LinearLayout>

        <!--        Humidity-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/rounded"
            android:orientation="vertical"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:id ="@+id/txtHumidity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="27%"
                    android:layout_marginLeft="5dp"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:gravity="start" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cloud" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/progressBarHumi"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:progress="50"
                android:progressDrawable="@drawable/custom_progress_bar"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:orientation="horizontal" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Humidity"
                android:textSize="18sp"
                android:textColor="#08B2E3"
                android:gravity="center"
                android:paddingTop="8dp" />
        </LinearLayout>

    </LinearLayout>


    <!--Light & Fan-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal">

        <!--        Light -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/rounded"
            android:orientation="vertical"
            android:layout_weight="1">

            <!--            Image & Toggle-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="2">
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginBottom="5dp"
                        android:src="@drawable/light"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1">
                    <com.github.angads25.toggle.widget.LabeledSwitch
                        android:id="@+id/btn_led"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:textSize="15dp"
                        app:textOn = "ON"
                        app:textOff = "OFF"
                        app:on="false"
                        app:colorOff="#2E2E3E"
                        app:colorOn="#27D71C"
                        app:colorBorder="#2E2E3E" />
                </LinearLayout>
            </LinearLayout>

            <!--            Text Light-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Light"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="5dp"
                android:gravity="left"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phillip hue"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="5dp"
                android:gravity="left"/>

        </LinearLayout>

        <!--        Fan-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/rounded"
            android:orientation="vertical"
            android:layout_weight="1">

            <!--            Image & Toggle-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="2">
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginBottom="5dp"
                        android:src="@drawable/wind"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1">
                    <com.github.angads25.toggle.widget.LabeledSwitch
                        android:id="@+id/btn_fan"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:textSize="15dp"
                        app:textOn = "ON"
                        app:textOff = "OFF"
                        app:on="false"
                        app:colorOff="#2E2E3E"
                        app:colorOn="#27D71C"
                        app:colorBorder="#2E2E3E" />
                </LinearLayout>
            </LinearLayout>
            <!--            Text Fan-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fan"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="5dp"
                android:gravity="left"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Panasonic KZH231"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="5dp"
                android:gravity="left"/>
        </LinearLayout>
    </LinearLayout>

    <!--    Door & Pump-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal">
        <!--        Door -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/rounded"
            android:orientation="vertical"
            android:layout_weight="1">

            <!--            Image & Toggle-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="2">
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginBottom="5dp"
                        android:src="@drawable/door"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1">
                    <com.github.angads25.toggle.widget.LabeledSwitch
                        android:id="@+id/btn_door"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:textSize="15dp"
                        app:textOn = "ON"
                        app:textOff = "OFF"
                        app:on="false"
                        app:colorOff="#2E2E3E"
                        app:colorOn="#27D71C"
                        app:colorBorder="#2E2E3E" />
                </LinearLayout>
            </LinearLayout>

            <!--            Text Door-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Door"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="5dp"
                android:gravity="left"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Xiaomi ZPL21"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="5dp"
                android:gravity="left"/>

        </LinearLayout>

        <!--        Pump-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/rounded"
            android:orientation="vertical"
            android:layout_weight="1">

            <!--            Image & Toggle-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="2">
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginBottom="5dp"
                        android:src="@drawable/pump"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1">
                    <com.github.angads25.toggle.widget.LabeledSwitch
                        android:id="@+id/btn_pump"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:textSize="15dp"
                        app:textOn = "ON"
                        app:textOff = "OFF"
                        app:on="false"
                        app:colorOff="#2E2E3E"
                        app:colorOn="#27D71C"
                        app:colorBorder="#2E2E3E" />
                </LinearLayout>
            </LinearLayout>
            <!--            Text Pump-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pump"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="5dp"
                android:gravity="left"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="KingPum Z231"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="5dp"
                android:gravity="left"/>
        </LinearLayout>

    </LinearLayout>

    <!--    Menu bar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        </LinearLayout>
        <!--        Bar-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:background="#5C4841">
            <!-- Button Setting-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <Button
                    android:id="@+id/btn_settings"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/setting"
                    android:layout_marginLeft="20dp"
                    android:contentDescription="Button setting"/>
            </LinearLayout>
            <!--            Button Voice-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/camera"
                    android:layout_marginLeft="15dp"
                    android:contentDescription="Button camera"/>
            </LinearLayout>
            <!--  Button Voice-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <Button
                    android:id="@+id/voice"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:drawableRight="@drawable/micro"
                    android:layout_marginRight="15dp"
                    android:contentDescription="Button micro"/>
            </LinearLayout>
            <!--            Log out-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <Button
                    android:id="@+id/logout"
                    android:text ="@string/logout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:drawableRight="@drawable/logout"
                    android:layout_marginRight="20dp"
                    android:contentDescription="Button logout"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>